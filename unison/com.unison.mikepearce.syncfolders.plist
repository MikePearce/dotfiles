<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Label</key>
	<string>com.unison.mikepearce.syncfolders</string>
	<key>ProgramArguments</key>
	<array>
		<string>/usr/local/bin/unison</string>
		<string>DropboxToGdocs</string>
		<string>-auto</string>
		<string>-batch</string>
	</array>
	<key>RunAtLoad</key>
	<true/>
	<key>StandardErrorPath</key>
	<string>/tmp/com.unison.mikepearce.syncfolders.err</string>
	<key>StandardOutPath</key>
	<string>/tmp/com.unison.mikepearce.syncfolders.out</string>
	<key>WatchPaths</key>
	<array>
		<string>/Users/mikepearce/Dropbox</string>
		<string>/Users/mikepearce/Google Drive
</string>
	</array>
</dict>
</plist>
